    <style name="fab_3_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="maxImageSize">@dimen/cardview_default_radius</item>
    </style>

    <style name="btn_common_layout">
        <item name="android:background">@drawable/btn_login_register</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="tv_title_login_reg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">46sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="bg_login_reg">
        <item name="android:background">@color/white</item>
    </style>

    <style name="chat_msg_time">
        <item name="android:textSize">11sp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="bg_dialog_reg_login">
        <item name="background">@drawable/bg_login_and_reg_frag</item>
    </style>

    <style name="et_login">
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>">
        <item name="android:textColorHint">@color/Black_b</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="et_search_bar">
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>">
        <item name="android:fontFamily">@font/montserrat_400</item>">
        <item name="android:layout_marginHorizontal">16dp</item>">
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:background">@drawable/et_search_bar_bg</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="et_horizontal_company_list_bar">
        <item name="android:textSize">13sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">4dp</item>">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_400</item>
        <item name="android:textColor">@color/Black_6</item>
        <item name="android:background">@drawable/et_horizontal_service_list_item_bg</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">@dimen/DP12</item>
    </style>

    <style name="tv_datestamp">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">4dp</item>">
        <item name="android:textColorHint">#3c3c43</item>
        <item name="android:fontFamily">@font/inter_600</item>
        <item name="android:textColor">@color/Black_5</item>
        <item name="android:background">@drawable/bg_datestamp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingHorizontal">@dimen/DP12</item>
    </style>

    <style name="tv_msg_announcement">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_600</item>
        <item name="android:textColor">@color/DarkGreen</item>
        <item name="android:background">@drawable/bg_msg_announcement</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingHorizontal">@dimen/DP12</item>
    </style>

    <style name="tv_notification_title">
        <item name="android:textSize">21sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_700</item>
        <item name="android:textColor">@color/Black_3</item>
    </style>

    <style name="et_notification_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_700</item>
        <item name="android:textColor">@color/Black_3</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="tv_notification_description">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/inter_400</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Black_5</item>
    </style>

    <style name="tv_icon_new">
        <item name="android:textSize">9sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_new_icon</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:padding">2.5dp</item>
    </style>

    <style name="BottomNavTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>